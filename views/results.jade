block content
	.container
		.row
			#map
		.row
			each val in data
				.col.s6.m4
					.card-panel.teal
						span.white-text
							| #{val.vehicle.constructor}
							| #{val.vehicle.model}
							| #{val.status}
							| #{val.crowfly_distance}
